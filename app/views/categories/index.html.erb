<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl pl-16">Categories</h1>
    <%= link_to new_category_path do %>
      <i class="fa-solid fa-circle-plus fa-beat fixed right-36 bottom-28 text-black text-6xl "></i>
    <% end %>
  </div>
  <%= link_to new_category_path do %>
    <i class="fa-solid fa-circle-plus fa-beat absolute right-24 bottom-24 text-black text-5xl "></i>
  <% end %>

  <div id="categories" class="min-w-full pl-16 pr-16">
    <%= render @categories %>
  </div>
</div>
