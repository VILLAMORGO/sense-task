            <td class="w-3/12"><%= distance_of_time_in_words_to_now(completed.date) %> ago</td>
            <td>
              <%= link_to show_task_path(completed.id) do %>
                <i class="fa-solid fa-maximize ml-5"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="home-div" >
    <label class="text-center bg-slate-100 h-12 pt-1 rounded-tr-lg rounded-tl-lg">No Date</label>
    <hr>
    <table class="text-2xl table-fixed test">
      <thead>
        <tr>
          <th class="pl-8">Task</th>
          <th class="pl-2">Category</th>
          <th class="pl-3">Due</th>
          <th></th>
        </tr>
      </thead>
      <tbody class="scroll">
