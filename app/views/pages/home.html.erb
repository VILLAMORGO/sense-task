<div class="text-left text-3xl flex flex-wrap justify-center">
  <div class="home-div" >
    <label class="text-center bg-red-100 h-12 pt-1 rounded-tr-lg rounded-tl-lg">Overdue</label>
    <hr>
    <table class="text-2xl table-fixed test">
      <thead>
        <tr>
          <th class="pl-8">Task</th>
          <th class="pl-2">Category</th>
          <th class="pl-3">Due</th>
          <th></th>
        </tr>
      </thead>
      <tbody class="scroll">
        <% @tasks_overdue.each do | overdue | %>
          <tr class="hover:bg-red-50 h-10 border">
            <td class="pl-8"><%= link_to overdue.title, show_task_path(overdue.id) %></td>
            <td><%= link_to overdue.category_title, show_task_path(overdue.id) %></td>
            <td class="w-3/12"><%= distance_of_time_in_words_to_now(overdue.date) %> ago</td>
            <td>
              <%= link_to show_task_path(overdue.id) do %>
                <i class="fa-solid fa-maximize"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="home-div" >
    <label class="text-center bg-green-100 h-12 pt-1 rounded-tr-lg rounded-tl-lg">Today</label>
    <hr>
    <table class="text-2xl table-fixed test">
      <thead>
        <tr>
          <th class="pl-8">Task</th>
          <th class="pl-2">Category</th>
          <th class="pl-3">Due</th>
          <th></th>
        </tr>
      </thead>
      <tbody class="scroll">
        <% @tasks_today.each do | today | %>
          <tr class="hover:bg-green-50 h-10 border">
            <td class="pl-8"><%= link_to  today.title, show_task_path( today.id) %></td>
            <td class="w-3/12"><%= link_to  today.category_title, show_task_path( today.id) %></td>
            <td class="w-6/12"><%= distance_of_time_in_words_to_now(Date.tomorrow) %> from now</td>
            <td>
              <%= link_to show_task_path( today.id) do %>
                <i class="fa-solid fa-maximize ml-5"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="home-div" >
    <label class="text-center bg-pink-100 h-12 pt-1 rounded-tr-lg rounded-tl-lg">Completed</label>
    <hr>
    <table class="text-2xl table-fixed test">
      <thead>
        <tr>
          <th class="pl-8">Task</th>
