
<div id="<%= dom_id task %>">

  <p class="my-5 text-lg">
    <strong class="block text-xl mb-1">Title:</strong>
    <%= task.title %>
  </p>

  <p class="my-5 text-lg">
    <strong class="block text-xl mb-1">Details: (Optional)</strong>
    <%= task.body %>
  </p>

  <p class="my-5 text-lg">
    <strong class="block text-xl mb-1">Category:</strong>
    <%= task.category_title %>
  </p>

  <p class="my-5 text-lg">
    <strong class="block text-xl mb-1">Due:</strong>
    <%= task.date %>
  </p>

  <p class="my-5 text-lg">
    <strong class="block text-xl mb-1">Status:</strong>
    <%= task.status %><br />
    <% Task::STATUSES.each do |status| %>
      <%= link_to status, update_status_task_path(task, status: status), method: :patch, class: "border border-black h-16 w-16 p-1 rounded-lg" %>
    <% end %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this task", task, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline">
      <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"  %>
    </div>
    <%= link_to 'Edit this task', edit_task_path(task), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
